<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.th.monicadzhaleva.treasurehunt.LoginActivity">

    <!-- Login progress -->


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome,
Treasure Hunter!"
        android:textColor="#d6be0c"
        android:textSize="30dp"/>

    <AutoCompleteTextView
        android:id="@+id/usernameRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#444"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:padding="4dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        tools:layout_editor_absoluteX="16dp"></AutoCompleteTextView>


    <AutoCompleteTextView
        android:id="@+id/passwordRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#444"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="4dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="141dp" />

    <AutoCompleteTextView
        android:id="@+id/firstnameRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#444"
        android:ems="10"
        android:hint="First name"
        android:inputType="textPersonName"
        android:padding="4dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <AutoCompleteTextView
        android:id="@+id/lastnameRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#444"
        android:ems="10"
        android:hint="Last name"
        android:inputType="textPersonName"
        android:padding="4dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />



    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/imageButtonPrev"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@android:drawable/ic_media_previous"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:layout_alignTop="@+id/imageButtonNext"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@null"
            />

        <ImageView
            android:id="@+id/chosenAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            app:srcCompat="@drawable/avatar1"
            android:tag="1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/imageButtonNext"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@android:drawable/ic_media_next"
            android:layout_alignBottom="@+id/chosenAvatar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="37dp"
            android:layout_marginEnd="37dp"
            android:layout_marginBottom="17dp"
            android:background="@null"
            />
        <Button
            android:id="@+id/email_register_button"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="#5073ff"
            android:background="#252525"
            android:shadowColor="#5073ff"
            android:text="Register"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="202dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <![CDATA[

    :layout_editor_absoluteY="77dp" />









    ]]>
</LinearLayout>